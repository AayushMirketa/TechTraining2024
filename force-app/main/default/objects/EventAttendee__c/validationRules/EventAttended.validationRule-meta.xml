<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EventAttended</fullName>
    <active>true</active>
    <description>Attendee can only be associated with the Event whose End Date is in future &amp; Event Live Checkbox is checked and Event is accepting the Attendees.</description>
    <errorConditionFormula>NOT(Event__r.Live__c) ||  NOT(Event__r.End_Date__c &gt;  NOW()) ||
   NOT(Event__r.Remaining_Seats__c &gt; 0)</errorConditionFormula>
    <errorMessage>Event can not be attended</errorMessage>
</ValidationRule>
