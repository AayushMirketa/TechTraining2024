<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Length_five_fixed</fullName>
    <active>true</active>
    <description>Zip Code must be in 5-digit format (0-9).</description>
    <errorConditionFormula>OR(
     LEN( Zip_Code__c )!=5,
      NOT(ISNUMBER( Zip_Code__c ))
)</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Zip Code must be in 5-digit format (0-9).</errorMessage>
</ValidationRule>
